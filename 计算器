			operators[i].onclick=function{
				//做运算
				//规则：将用户的第一个数赋值给第二个数，将第一个数清空
				//等到接受下个数据
			}
		}
		//清除键的逻辑处理
		//清除键的点击事件
		clear.onclick=function(){
			numValue1="";
		   numValue2="";
		    oper="";
		    //将文本框内容变为0
		    showResult.value=0;
			
		}
		//退格键
		//设置点击
		del.onclick=function(){
			if(numValue1.length!=1){
				numValue1.substr(0,numValue1.)
			}
			else{
				//jiang第一个数  第二个数操作符清空
